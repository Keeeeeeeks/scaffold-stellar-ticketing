'use client';

import { useQuery } from 'urql';
import { motion, AnimatePresence } from 'framer-motion';
import { TRANSACTION_BY_HASH } from '@/lib/graphql/queries';
import { parseTransactionXDR } from '@/lib/stellar/xdr-parser';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { Badge } from '@/components/ui/badge';
import {
  Tooltip,
  TooltipContent,
  TooltipProvider,
  TooltipTrigger,
} from '@/components/ui/tooltip';
import { AddressDisplay } from '@/components/shared/AddressDisplay';
import { CopyButton } from '@/components/shared/CopyButton';
import { ErrorState, NotFoundState } from '@/components/shared/ErrorState';
import { TransactionSkeleton } from '@/components/shared/LoadingState';
import { OperationsList } from './OperationsList';
import { StateChangeVisualizer } from './StateChangeVisualizer';
import { RawXDRViewer } from './RawXDRViewer';
import {
  Check,
  X,
  Clock,
  HelpCircle,
  Cpu,
  HardDrive,
  FileInput,
  FileOutput,
} from 'lucide-react';
import { formatTimeAgo, formatLedgerNumber, formatXLM } from '@/lib/utils/format';
import { SPRING } from '@/lib/utils/constants';
import { cn } from '@/lib/utils';

interface TransactionDetailProps {
  hash: string;
}

export function TransactionDetail({ hash }: TransactionDetailProps) {
  const [{ data, fetching, error }] = useQuery({
    query: TRANSACTION_BY_HASH,
    variables: { hash },
  });

  if (fetching) return <TransactionSkeleton />;
  if (error) return <ErrorState message={error.message} />;
  if (!data?.transactionByHash)
    return <NotFoundState type="transaction" identifier={hash} />;

  const tx = data.transactionByHash;
  const parsed = parseTransactionXDR(tx.envelopeXdr, tx.resultXdr, tx.metaXdr);

  return (
    <TooltipProvider>
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={SPRING.gentle}
        className="space-y-6"
      >
        {/* Header */}
        <div className="flex items-start justify-between gap-4 flex-wrap">
          <div>
            <h1 className="text-2xl font-bold flex items-center gap-3 flex-wrap">
              Transaction Details
              <StatusBadge status={parsed.status} />
            </h1>
            <div className="flex items-center gap-2 mt-2 text-muted-foreground">
              <span className="font-mono text-sm break-all">{hash}</span>
              <CopyButton value={hash} />
            </div>
          </div>
        </div>

        {/* Overview Card */}
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1, ...SPRING.gentle }}
        >
          <Card>
            <CardHeader>
              <CardTitle className="text-lg">Overview</CardTitle>
            </CardHeader>
            <CardContent className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <InfoRow
                label="Status"
                value={<StatusBadge status={parsed.status} />}
                tooltip="Whether the transaction was successfully included in the ledger"
              />
              <InfoRow
                label="Ledger"
                value={formatLedgerNumber(tx.ledgerNumber)}
                tooltip="The ledger (block) number that includes this transaction"
              />
              <InfoRow
                label="Timestamp"
                value={formatTimeAgo(tx.ledgerCreatedAt)}
                tooltip="When this transaction was confirmed on the network"
              />
              <InfoRow
                label="Source Account"
                value={<AddressDisplay address={parsed.sourceAccount} />}
                tooltip="The account that initiated and signed this transaction"
              />
              <InfoRow
                label="Sequence Number"
                value={parsed.sequenceNumber}
                tooltip="A unique number that prevents transaction replay"
              />
              <InfoRow
                label="Fee Charged"
                value={`${formatXLM(parsed.feeCharged)} XLM`}
                tooltip="The actual fee paid for this transaction"
              />
              {parsed.memo && (
                <InfoRow
                  label="Memo"
                  value={
                    <span className="break-all">
                      <Badge variant="outline" className="mr-2 text-xs">
                        {parsed.memoType}
                      </Badge>
                      {parsed.memo}
                    </span>
                  }
                  tooltip="Optional message attached to the transaction"
                />
              )}
              {parsed.isSoroban && (
                <InfoRow
                  label="Type"
                  value={
                    <Badge className="bg-purple-500/10 text-purple-500 border-purple-500/20">
                      Soroban Smart Contract
                    </Badge>
                  }
                  tooltip="This transaction invokes a Soroban smart contract"
                />
              )}
            </CardContent>
          </Card>
        </motion.div>

        {/* Soroban Resource Usage (if applicable) */}
        <AnimatePresence>
          {parsed.isSoroban && parsed.sorobanData && (
            <motion.div
              initial={{ opacity: 0, height: 0 }}
              animate={{ opacity: 1, height: 'auto' }}
              exit={{ opacity: 0, height: 0 }}
              transition={SPRING.gentle}
            >
              <Card>
                <CardHeader>
                  <CardTitle className="text-lg flex items-center gap-2">
                    Resource Usage
                    <Tooltip>
                      <TooltipTrigger>
                        <HelpCircle className="h-4 w-4 text-muted-foreground" />
                      </TooltipTrigger>
                      <TooltipContent className="max-w-xs">
                        Soroban transactions consume compute and storage
                        resources. These metrics show how much was used.
                      </TooltipContent>
                    </Tooltip>
                  </CardTitle>
                </CardHeader>
                <CardContent className="grid grid-cols-2 md:grid-cols-4 gap-4">
                  <ResourceMetric
                    icon={Cpu}
                    label="CPU Instructions"
                    value={parsed.sorobanData.cpuInstructions.toLocaleString()}
                    tooltip="Number of WASM instructions executed"
                  />
                  <ResourceMetric
                    icon={HardDrive}
                    label="Memory"
                    value={`${parsed.sorobanData.memoryBytes.toLocaleString()} B`}
                    tooltip="Peak memory usage during execution"
                  />
                  <ResourceMetric
                    icon={FileInput}
                    label="Ledger Read"
                    value={`${parsed.sorobanData.readBytes.toLocaleString()} B`}
                    tooltip="Ledger data read from storage"
                  />
                  <ResourceMetric
                    icon={FileOutput}
                    label="Ledger Write"
                    value={`${parsed.sorobanData.writeBytes.toLocaleString()} B`}
                    tooltip="Ledger data written to storage"
                  />
                </CardContent>
              </Card>
            </motion.div>
          )}
        </AnimatePresence>

        {/* Tabs for Operations, State Changes, Raw Data */}
        <motion.div
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2, ...SPRING.gentle }}
        >
          <Tabs defaultValue="operations">
            <TabsList>
              <TabsTrigger value="operations">
                Operations ({tx.operations?.edges?.length || 0})
              </TabsTrigger>
              <TabsTrigger value="stateChanges">
                State Changes ({tx.stateChanges?.edges?.length || 0})
              </TabsTrigger>
              <TabsTrigger value="raw">Raw XDR</TabsTrigger>
            </TabsList>

            <TabsContent value="operations" className="mt-4">
              <OperationsList
                operations={tx.operations?.edges || []}
                parsedOperations={parsed.operations}
              />
            </TabsContent>

            <TabsContent value="stateChanges" className="mt-4">
              <StateChangeVisualizer stateChanges={tx.stateChanges?.edges || []} />
            </TabsContent>

            <TabsContent value="raw" className="mt-4">
              <RawXDRViewer
                envelope={tx.envelopeXdr}
                result={tx.resultXdr}
                meta={tx.metaXdr}
              />
            </TabsContent>
          </Tabs>
        </motion.div>
      </motion.div>
    </TooltipProvider>
  );
}

function InfoRow({
  label,
  value,
  tooltip,
}: {
  label: string;
  value: React.ReactNode;
  tooltip: string;
}) {
  return (
    <div className="flex flex-col gap-1">
      <Tooltip>
        <TooltipTrigger asChild>
          <span className="text-sm text-muted-foreground cursor-help flex items-center gap-1">
            {label}
            <HelpCircle className="h-3 w-3" />
          </span>
        </TooltipTrigger>
        <TooltipContent className="max-w-xs">{tooltip}</TooltipContent>
      </Tooltip>
      <div className="font-medium">{value}</div>
    </div>
  );
}

function StatusBadge({ status }: { status: 'success' | 'failed' | 'pending' }) {
  const config = {
    success: {
      icon: Check,
      class: 'bg-emerald-500/10 text-emerald-500 border-emerald-500/20',
    },
    failed: { icon: X, class: 'bg-red-500/10 text-red-500 border-red-500/20' },
    pending: {
      icon: Clock,
      class: 'bg-yellow-500/10 text-yellow-500 border-yellow-500/20',
    },
  }[status];

  const Icon = config.icon;
  return (
    <Badge variant="outline" className={cn('gap-1', config.class)}>
      <Icon className="h-3 w-3" />
      {status.charAt(0).toUpperCase() + status.slice(1)}
    </Badge>
  );
}

function ResourceMetric({
  icon: Icon,
  label,
  value,
  tooltip,
}: {
  icon: any;
  label: string;
  value: string;
  tooltip: string;
}) {
  return (
    <Tooltip>
      <TooltipTrigger asChild>
        <div className="text-center p-4 bg-muted/50 rounded-lg cursor-help">
          <Icon className="h-5 w-5 mx-auto mb-2 text-muted-foreground" />
          <div className="text-xs text-muted-foreground mb-1">{label}</div>
          <div className="font-mono font-bold text-sm">{value}</div>
        </div>
      </TooltipTrigger>
      <TooltipContent>{tooltip}</TooltipContent>
    </Tooltip>
  );
}
