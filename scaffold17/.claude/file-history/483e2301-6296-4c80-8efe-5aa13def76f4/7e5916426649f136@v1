'use client';

import { useState } from 'react';
import Link from 'next/link';
import { motion } from 'framer-motion';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from '@/components/ui/table';
import { AddressDisplay } from '@/components/shared/AddressDisplay';
import { Search, TrendingUp, Coins, Users, ExternalLink } from 'lucide-react';
import { formatCompactNumber } from '@/lib/utils/format';
import { SPRING } from '@/lib/utils/constants';
import { cn } from '@/lib/utils';

// Mock data for demonstration
const MOCK_TOKENS = [
  {
    contractId: 'CDLZFC3SYJYDZT7K67VZ75HPJVIEUVNIXF47ZG2FB2RMQQVU2HHGCYSC',
    name: 'USD Coin',
    symbol: 'USDC',
    decimals: 7,
    totalSupply: '1000000000000000',
    holderCount: 12456,
    type: 'SAC' as const,
    issuer: 'GA5ZSEJYB37JRC5AVCIA5MOP4RHTM335X2KGX3IHOJAPP5RE34K4KZVN',
  },
  {
    contractId: 'CCWAMWUCMCDXUQBCKLKCLSQGZLTXLXHRWHW4NNBNBTYEHXQXHFFSQAPZ',
    name: 'Stellar Token',
    symbol: 'STLR',
    decimals: 7,
    totalSupply: '500000000000000',
    holderCount: 8932,
    type: 'SEP41' as const,
  },
  {
    contractId: 'CBSXLMPVNQVCJVKTRVHKFFIJUPZXFRR4Q5ZFR2I6KV7GDLXW4EWQYHHQ',
    name: 'Wrapped Bitcoin',
    symbol: 'WBTC',
    decimals: 8,
    totalSupply: '2100000000000000',
    holderCount: 5621,
    type: 'SAC' as const,
    issuer: 'GDPJALI4AZKUU2W426U5WKMAT6CN3AJRPIIRYR2YM54TL2GDWO5O2MZM',
  },
  {
    contractId: 'CDCGEWVQA4WQKGWADMRQMXBZZ5VTPJHDNQSQHFFSWFUAPJPXZXZ6VKPX',
    name: 'Aquarius Token',
    symbol: 'AQUA',
    decimals: 7,
    totalSupply: '10000000000000000',
    holderCount: 45123,
    type: 'SEP41' as const,
  },
];

const containerVariants = {
  hidden: { opacity: 0 },
  visible: {
    opacity: 1,
    transition: {
      staggerChildren: 0.1,
      delayChildren: 0.2,
    },
  },
};

const itemVariants = {
  hidden: { opacity: 0, y: 20 },
  visible: {
    opacity: 1,
    y: 0,
    transition: SPRING.gentle,
  },
};

export function TokenTracker() {
  const [searchQuery, setSearchQuery] = useState('');
  const [tokens] = useState(MOCK_TOKENS);

  const filteredTokens = tokens.filter(
    (token) =>
      token.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
      token.symbol.toLowerCase().includes(searchQuery.toLowerCase()) ||
      token.contractId.toLowerCase().includes(searchQuery.toLowerCase())
  );

  const totalTokens = tokens.length;
  const sacCount = tokens.filter((t) => t.type === 'SAC').length;
  const sep41Count = tokens.filter((t) => t.type === 'SEP41').length;

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={SPRING.gentle}
      className="space-y-6"
    >
      {/* Header */}
      <div>
        <h1 className="text-3xl font-bold mb-2">Token Tracker</h1>
        <p className="text-muted-foreground">
          Track SEP-41 and Stellar Asset Contract (SAC) tokens on the Stellar
          network.
        </p>
      </div>

      {/* Search */}
      <div className="relative max-w-md">
        <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
        <Input
          placeholder="Search tokens by name, symbol, or contract..."
          value={searchQuery}
          onChange={(e) => setSearchQuery(e.target.value)}
          className="pl-10"
        />
      </div>

      {/* Stats Cards */}
      <motion.div
        variants={containerVariants}
        initial="hidden"
        animate="visible"
        className="grid grid-cols-1 md:grid-cols-3 gap-4"
      >
        <motion.div variants={itemVariants}>
          <StatCard
            icon={Coins}
            label="Total Tokens"
            value={totalTokens}
            color="text-blue-500"
          />
        </motion.div>
        <motion.div variants={itemVariants}>
          <StatCard
            icon={TrendingUp}
            label="SAC Tokens"
            value={sacCount}
            color="text-purple-500"
          />
        </motion.div>
        <motion.div variants={itemVariants}>
          <StatCard
            icon={Users}
            label="SEP-41 Tokens"
            value={sep41Count}
            color="text-emerald-500"
          />
        </motion.div>
      </motion.div>

      {/* Token Table */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.3, ...SPRING.gentle }}
      >
        <Card>
          <CardHeader>
            <CardTitle className="text-lg">All Tokens</CardTitle>
          </CardHeader>
          <CardContent>
            <Table>
              <TableHeader>
                <TableRow>
                  <TableHead>Token</TableHead>
                  <TableHead>Type</TableHead>
                  <TableHead>Contract</TableHead>
                  <TableHead className="text-right">Holders</TableHead>
                  <TableHead className="text-right">Total Supply</TableHead>
                </TableRow>
              </TableHeader>
              <TableBody>
                {filteredTokens.map((token, index) => (
                  <motion.tr
                    key={token.contractId}
                    initial={{ opacity: 0, x: -10 }}
                    animate={{ opacity: 1, x: 0 }}
                    transition={{ delay: index * 0.05, ...SPRING.snappy }}
                    className="group"
                  >
                    <TableCell>
                      <Link
                        href={`/contract/${token.contractId}`}
                        className="flex items-center gap-3 hover:text-primary transition-colors"
                      >
                        <div className="w-10 h-10 rounded-full bg-gradient-to-br from-primary/20 to-primary/40 flex items-center justify-center font-bold text-sm">
                          {token.symbol.charAt(0)}
                        </div>
                        <div>
                          <div className="font-medium group-hover:text-primary transition-colors">
                            {token.name}
                          </div>
                          <div className="text-sm text-muted-foreground">
                            {token.symbol}
                          </div>
                        </div>
                      </Link>
                    </TableCell>
                    <TableCell>
                      <Badge
                        variant={token.type === 'SAC' ? 'default' : 'secondary'}
                        className={cn(
                          token.type === 'SAC'
                            ? 'bg-purple-500/10 text-purple-500 border-purple-500/20'
                            : 'bg-emerald-500/10 text-emerald-500 border-emerald-500/20'
                        )}
                      >
                        {token.type}
                      </Badge>
                    </TableCell>
                    <TableCell>
                      <AddressDisplay address={token.contractId} truncate />
                    </TableCell>
                    <TableCell className="text-right tabular-nums">
                      {token.holderCount.toLocaleString()}
                    </TableCell>
                    <TableCell className="text-right font-mono tabular-nums">
                      {formatSupply(token.totalSupply, token.decimals)}
                    </TableCell>
                  </motion.tr>
                ))}
                {filteredTokens.length === 0 && (
                  <TableRow>
                    <TableCell
                      colSpan={5}
                      className="text-center py-8 text-muted-foreground"
                    >
                      No tokens found matching your search.
                    </TableCell>
                  </TableRow>
                )}
              </TableBody>
            </Table>
          </CardContent>
        </Card>
      </motion.div>
    </motion.div>
  );
}

function StatCard({
  icon: Icon,
  label,
  value,
  color,
}: {
  icon: any;
  label: string;
  value: number;
  color: string;
}) {
  return (
    <Card>
      <CardContent className="flex items-center gap-4 p-6">
        <div className={cn('p-3 rounded-full bg-muted', color)}>
          <Icon className="h-6 w-6" />
        </div>
        <div>
          <div className="text-sm text-muted-foreground">{label}</div>
          <div className="text-2xl font-bold">{value.toLocaleString()}</div>
        </div>
      </CardContent>
    </Card>
  );
}

function formatSupply(supply: string, decimals: number): string {
  const value = parseInt(supply, 10) / Math.pow(10, decimals);
  return formatCompactNumber(value);
}
